    <title>Typing for Tomorrow</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }
        header {
            background: #333;
            color: white;
            padding: 1em;
        }
        main {
            margin: 20px;
        }
        #quote {
            font-size: 20px;
            margin: 20px;
        }
        textarea {
            width: 80%;
            height: 100px;
            margin-top: 20px;
        }
        button {
            padding: 10px 20px;
            background: #28a745;
            color: white;
            border: none;
            cursor: pointer;
            margin-top: 10px;
        }
        button:hover {
            background: #218838;
        }
        #result, #liveStats {
            margin-top: 20px;
            font-size: 18px;
        }
        .progress-bar {
            width: 80%;
            height: 30px;
            background-color: #ddd;
            margin: 20px auto;
            position: relative;
            border-radius: 15px;
        }
        .progress {
            height: 100%;
            width: 0;
            background-color: #28a745;
            border-radius: 15px;
        }
        .character {
            font-size: 50px;
            position: absolute;
            top: -60px;
            left: 0;
            transition: left 0.1s linear;
        }
